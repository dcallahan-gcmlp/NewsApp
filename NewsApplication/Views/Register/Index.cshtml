@{
    ViewBag.Title = "Register";
}

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Register.js")"></script>

<div id="indexContainer">
    <h1 id="header">Daily Press</h1>

    <div id="registerForm">
    @using (Html.BeginForm("RegisterAccount", "Register", FormMethod.Post, new { @class = "register-form", role="form" }))
    {
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" name="Email" placeholder="Email" id="Email"/>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Password" id="password"/>
        </div>
        <div class="form-group">
            <label for="PasswordVerify">Password</label>
            <input type="password" class="form-control" name="PasswordVerify" placeholder="Re-enter Password" id="passwordVerify"/>    
        </div>    
        <button type="submit" class="btn btn-default">Register</button>
    }
    </div>
</div>

